{
	"manifest_version": 2,
	"name": "MyFirstExtension",
	"version": "1.0",
	"description": "Tryout extension",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_popup": "popup.html",
		"default_title": "PageFontStyle"
	},
	"permissions": [
		"tabs",
		"declarativeContent",
		"storage",
		"https://developer.chrome.com/*"
	]
}
